/*
 *
 * Global freesewing styles
 *
 */

@import 'cards'
@import 'lists'
@import 'blockquotes'
@import 'responsive-embed'

.icon
  font-family: 'Material icons'
  font-style: normal
  vertical-align: text-top

.btn
  text-transform: none

.btn--large
  font-size: 18px

/* draft form */

span.fs-option-custom
  color: #FF5B77

ul.expansion-panel
  margin-left: 0

.fs-m1200
  max-width: 1200px
  margin: auto

.fs-m800
  max-width: 800px
  margin: auto

.fs-m600
  max-width: 600px
  margin: auto

.fs-m400
  max-width: 400px
  margin: auto

.fs-state-icons {
  float: right;
  display: inline-block;
}


/* New look */
.fs-pad
  padding: 1rem 2rem
.fs-xpad
  padding: 0 2rem

.fs-ypad
  padding: 1rem 0

@media (max-width: 599px)
  .fs-pad
    padding: 1rem 8px
  .container
    padding: 8px
  .fs-xpad
    padding: 0 8px


.fs-content
  background: #fff
.fs-card-title
  font-weight: 500
  text-transform: uppercase
  margin-left: 1rem

ul.fs-metadata
  margin: 0

  li
    list-style-type: none
    margin-right: 1rem
    display: inline-block

.fs-muted
  color: $secondary

.fs-muted-dark
  color: #FFF9

.fs-success
  color: $success

.fs-info
  color: $info

.fs-warning
  color: $warning

.fs-accent
  color: $accent

.fs-emoji
  width: 20px
  display: inline-block
  text-align: center
  margin-right: 6px

.navigation-drawer
  padding: 25px 0

table.fs-info-table
  th.fs-titlerow
    width: 100%
    text-align: center
    padding: 10px
    text-transform: uppercase
    font-size: 110%
    color: $secondary
  th
    max-width: 300px
    text-align: right
    padding-right: 15px

  td
    max-width: 300px
  tr.fs-titlerow
    text-align: center
    padding: 10px
    text-transform: uppercase
    font-size: 18px
    color: $secondary
  tr.fs-titlerow th
    font-size: 16px

.fs-edit-inline
  max-width: 500px
  margin: 1rem auto
  text-align: center
  background: #FFF

td.fs-edit-inline:hover
  background: #FFF


.fs-bg-white
  background: #FFF

.fs-wp20
  width: 20%

.fs-wp30
  width: 30%

.fs-wp50
  width: 50%

.fs-row2
  max-width: 47%
  margin-right: 1%
  margin-left: 1%

.fs-row3
  max-width: 30%
  margin-right: 1%
  margin-left: 1%


table.fs-info-table tbody td
  font-size: 18px

table.table tbody td
  font-size: 15px

.fs-ucase
  text-transform: uppercase

.fs-locase
  text-transform: lowercase

.fs-m0
  margin: 0!important

.fs-hr
  position: relative;

.fs-hr--bottom::after
  bottom: 0

.fs-hr::after
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 2px;
  background-image: linear-gradient(-90deg,rgba(14,30,37,0) 0,#0e1e25 5%,#0e1e25 90%,rgba(14,30,37,0) 100%);
  opacity: .08;

.fs-active-btn
  font-weight: 700

.fs-white
  color: white

.fs-block-link
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 1

.comment
  margin: 16px 0

pre.fs-codeblock
  margin: 10px 0
  background: #212121
  border: none
  border-radius: 4px

  code::before
    display: none

  code::after
    display: none

  code
    box-shadow: none
    text-shadow: none

  .list
    background: inherit
    color: inherit

hr.footnotes-sep
  margin-top: 2rem
  margin-bottom: 10px

.footnotes
  font-size: 80%
